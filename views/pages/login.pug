extends ../_template

block content
  include ../common/_header_alt
  form(action="/login" method="POST").form-login
    if (isLogged)
      .status= isLogged
    .form-login__line
      label.form-login__label(for="") Привет,
      input.form-login__input(type="email" name="email" placeholder="E-MAIL")
    .form-login__line
      input.form-login__input(type="password" name="password" placeholder="Пароль")
    .form-login__line
      button(type="submit").form-login__button Войти